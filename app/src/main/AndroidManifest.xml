<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.deniz.draggable">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ScrollActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/Draggable.NoActionBar" />

        <activity
            android:name=".FrameActivity"
            android:theme="@style/Draggable.FullScreen" />

        <activity
            android:name=".BottomSheetActivity"
            android:theme="@style/Draggable.NoActionBar" />

        <activity
            android:name=".ImageDisplayActivity"
            android:theme="@style/Draggable.FullScreen" />

        <activity
            android:name=".PopupActivity"
            android:theme="@style/Draggable.FullScreen" />

        <activity
            android:name=".InfoActivity"
            android:theme="@style/Draggable.FullScreen" />

        <activity
            android:name=".JavaActivity"
            android:theme="@style/Draggable.FullScreen" />
    </application>

</manifest>